        let taxSwitches = document.getElementById("flexSwitchCheckDefault");
        taxSwitches.addEventListener("click",()=>{
            console.log("clicked")
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
